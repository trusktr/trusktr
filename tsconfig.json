{
	"compilerOptions": {
		"composite": true,

		"allowJs": true,
		"checkJs": true,
		"noEmit": true,

		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["es2023", "dom", "dom.iterable"],
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,

		"strict": true
	},
	"include": ["importmap.js", "template.js"],
	"references": [
		{"path": "./scratchpad/brain"},
		{"path": "./scratchpad/holster"},
		{"path": "./scratchpad/liminal-type"},
		{"path": "./scratchpad/picture-frame"}
	]
}
